{
  "name": "speedrun",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "esbuild src/main.jsx --bundle --format=esm --packages=external --outfile=dist/bundle.js",
    "dev": "npm run build -- --watch & pear run -d .",
    "prestage": "npm i && npm run build && npm prune --omit=dev"
  },
  "pear": {
    "pre": "pear-electron/pre",
    "stage": {
      "ignore": [
        "src/",
        "dev.js"
      ]
    },
    "gui": {
      "main": "index.html"
    }
  },
  "keywords": [],
  "author": "",
  "type": "module",
  "dependencies": {
    "pear-bridge": "^1.2.5",
    "pear-electron": "^1.7.27",
    "pear-updates": "^1.1.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "bare-subprocess": "^5.2.2",
    "esbuild": "^0.27.2"
  }
}
